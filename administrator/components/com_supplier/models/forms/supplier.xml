<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_SUPPLIER_FORM_LBL_SUPPLIER_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text"
                
            label="COM_SUPPLIER_FORM_LBL_SUPPLIER_NAME"
            description="COM_SUPPLIER_FORM_DESC_SUPPLIER_NAME" 
                
                
                 /> 

       <field name="email" type="text"
                
            label="COM_SUPPLIER_FORM_LBL_SUPPLIER_EMAIL"
            description="COM_SUPPLIER_FORM_DESC_SUPPLIER_EMAIL" 
                
                
                 /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
